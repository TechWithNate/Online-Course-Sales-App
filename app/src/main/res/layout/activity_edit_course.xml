<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:padding="20dp"
    tools:context=".EditCourseActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg"
                android:hint="Enter Course Name"
                android:textColor="@color/white"
                android:textColorHint="@color/secondary_txt"
                android:textSize="16sp"
                android:id="@+id/courseName"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg"
                android:hint="Enter Course Price"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/secondary_txt"
                android:textSize="16sp"
                android:id="@+id/coursePrice"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg"
                android:hint="Enter Course Suited For"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/secondary_txt"
                android:textSize="16sp"
                android:id="@+id/courseSuit"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg"
                android:hint="Enter Course Image Link"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/secondary_txt"
                android:textSize="16sp"
                android:id="@+id/courseImage"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg"
                android:hint="Enter Course Link"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/secondary_txt"
                android:textSize="16sp"
                android:id="@+id/courseLink"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/text_bg"
                android:hint="Enter Course Description"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textColorHint="@color/secondary_txt"
                android:textSize="16sp"
                android:id="@+id/courseDescription"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Update Course"
                    app:cornerRadius="10dp"
                    android:id="@+id/updateCourseBtn"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Delete Course"
                    app:cornerRadius="10dp"
                    android:textSize="12sp"
                    android:id="@+id/deleteCourseBtn"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>

</ScrollView>